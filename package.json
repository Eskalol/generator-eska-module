{
  "name": "generator-eska-module",
  "version": "0.0.0",
  "description": "Boilerplate simple node module generator",
  "homepage": "https://github.com/Eskalol/generator-eska-module.git",
  "author": {
    "name": "Eskil Opdahl Nordland",
    "email": "eskil.nordland@gmail.com",
    "url": "https://github.com/Eskalol"
  },
  "files": [
    "generators"
  ],
  "main": "generators/index.js",
  "keywords": [
    "",
    "yeoman-generator"
  ],
  "devDependencies": {
    "codecov": "^3.0.0",
    "eslint": "^4.1.0",
    "eslint-config-prettier": "^2.4.0",
    "eslint-config-xo": "^0.18.2",
    "eslint-plugin-prettier": "^2.2.0",
    "husky": "^0.14.3",
    "jest": "^21.0.0",
    "jest-cli": "^21.0.0",
    "lint-staged": "^4.2.1",
    "nsp": "^2.6.3",
    "prettier": "^1.7.0",
    "yeoman-assert": "^3.1.0",
    "yeoman-test": "^1.7.0",
    "yo-inception": "^0.3.1"
  },
  "dependencies": {
    "chalk": "^2.1.0",
    "generator-license": "^5.2.0",
    "yeoman-generator": "^2.0.1",
    "yosay": "^2.0.1"
  },
  "jest": {
    "coverageDirectory": "./coverage/",
    "collectCoverage": true,
    "testEnvironment": "node"
  },
  "scripts": {
    "prepublish": "nsp check",
    "pretest": "rm -rf __tests__/tempDir && eslint . --fix",
    "lint:fix": "eslint . --fix",
    "test": "jest",
    "coverage": "codecov"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ],
    "*.json": [
      "prettier --write",
      "git add"
    ]
  },
  "eslintConfig": {
    "extends": [
      "xo",
      "prettier"
    ],
    "env": {
      "jest": true,
      "node": true
    },
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "singleQuote": true,
          "printWidth": 90
        }
      ]
    },
    "plugins": [
      "prettier"
    ]
  },
  "eslintIgnore": [
    "**/templates/**",
    "__tests__/**/*.js"
  ],
  "repository": "Eskalol/generator-eska-module",
  "license": "MIT"
}
